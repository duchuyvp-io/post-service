{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Up",
            "type": "shell",
            "command": "docker-compose",
            "args": [
                "up",
                "--build",
                "-d",
                "post-service"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Stop",
            "type": "shell",
            "command": "docker-compose",
            "args": [
                "down"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}
